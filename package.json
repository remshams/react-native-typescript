{
  "name": "build_monitor",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "clean": "rimraf ./lib",
    "build": "npm run clean && tsc && npm run copy:i18n && npm run copy:assets",
    "watch": "watchman ./src 'tsc'",
    "copy:i18n": "cpx './src/_shared/i18n/**/*.json' ./lib/_shared/i18n/",
    "copy:assets": "cpx './src/assets/**/*' ./lib/assets/"
  },
  "dependencies": {
    "react": "16.0.0-beta.5",
    "react-native": "0.49.2",
    "react-navigation": "^1.0.0-beta.13",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-observable": "^0.16.0",
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "@types/react": "^16.0.10",
    "@types/react-native": "^0.49.0",
    "@types/react-navigation": "^1.0.21",
    "@types/react-redux": "^5.0.10",
    "@types/react-test-renderer": "^15.5.4",
    "@types/redux-devtools-extension": "^2.13.2",
    "babel-jest": "21.2.0",
    "babel-preset-react-native": "4.0.0",
    "cpx": "^1.5.0",
    "jest": "21.2.1",
    "react-test-renderer": "16.0.0-beta.5",
    "redux-devtools-extension": "^2.13.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.1.0",
    "typescript": "^2.5.3",
    "watchman": "^0.1.8"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/",
      "/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
